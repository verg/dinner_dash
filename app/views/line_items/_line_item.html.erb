<div class="line-item">
  <li class='item-photo'><%= image_tag line_item.small_product_photo %></li>
  <li id='<%= line_item.product_title.parameterize  %>'>
  <li class='item-price'> <%= number_to_currency(line_item.total_price) %> </li>
  <li class='product-title'> <%= line_item.product_title %> </li>
  <%= form_for line_item do |f| %>
    <li><%= f.text_field :quantity, class: "quantity", value: line_item.quantity %></li>
    <li><%= f.submit "Update", class: 'update-quantity-button' %></li>
  <% end %>
  <li>
  <%= button_to "Remove", line_item_path(line_item), method: :delete,
      class: 'remove-from-cart' %>
  </li>
</div>
