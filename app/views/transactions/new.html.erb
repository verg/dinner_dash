<%= form_tag transactions_path do %>
  <article>
    <label class="amount">
      <span>Amount: <%= @cart.total_price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="payment-button stripe-button"
          data-key="<%= @payment_gateway_key %>"
          data-description="A month's subscription"
          data-amount="<%= @cart.total_price_cents %>"></script>
<% end %>
