<ul>
  <li class='order-placed-time'>
    Placed: <%= @order.created_at.to_time.strftime("%l:%M %P, %b %e, %Y") %>
  </li>

  <li class='order-status'>
  Status: <%= @order.status.capitalize %>
    <% if @order.finalized_at %>
      at <%= @order.finalized_at.to_time.strftime("%l:%M %P, %b %e, %Y") %>
    <% end %>
  </li>
</ul>
<ul class='ordered-line_items'>
  <%= render partial: 'line_items/ordered_line_items',
    collection: @order.line_items, as: :line_item %>
</ul>

<p class="total-order-price">
  Total: $<%= @order.total_price %>
</p>
